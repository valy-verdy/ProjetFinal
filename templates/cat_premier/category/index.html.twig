{% extends 'dashboardbase.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<h1>liste des catégories</h1>
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.name }}</td>
						<td>
							<a class="btn btn-success" href="{{ path('app_category_show', {'id': category.id}) }}">Voir</a>
							<a class="btn btn-warning" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun résultat trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('app_category_new') }}">Créer une nouvelle catégorie</a>
	</div>
{% endblock %}
