{% extends 'base.html.twig' %}

{% block title %}Ligne de commande
{% endblock %}

{% block body %}
	<h1>Ligne de commande</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Quantité</th>
				<th>Montant</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for order_line in order_lines %}
				<tr>
					<td>{{ order_line.quantity }}</td>
					<td>{{ order_line.amount }}</td>
					<td>
						<a href="{{ path('app_order_line_show', {'id': order_line.id}) }}">Voir</a>
						<a href="{{ path('app_order_line_edit', {'id': order_line.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun résultat trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_order_line_new') }}">Créer une nouvelle ligne de commande</a>
{% endblock %}
