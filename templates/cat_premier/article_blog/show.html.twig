{% extends 'dashboardbase.html.twig' %}

{% block title %}Article Blog
{% endblock %}

{% block body %}
	<h1>Article Blog</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article_blog.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ article_blog.title }}</td>
			</tr>
