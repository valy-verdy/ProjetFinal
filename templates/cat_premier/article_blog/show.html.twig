	<a class="btn btn-secondary" href="{{ path('app_article_blog_index') }}">Retour</a>

	<a class="btn btn-warning" href="{{ path('app_article_blog_edit', {'id': article_blog.id}) }}">Modifier</a>

	{{ include('article_blog/_delete_form.html.twig') }}
