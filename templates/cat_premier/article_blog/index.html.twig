{% extends 'dashboardbase.html.twig' %}

{% block title %}ArticleBlog index
{% endblock %}

{% block body %}
	<h1>Liste des Articles Blog</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Contenu</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article_blog in article_blogs %}
				<tr>
					<td>{{ article_blog.id }}</td>
					<td>{{ article_blog.title }}</td>
					<td>{{ article_blog.content }}</td>
					<td>
						<a class="btn btn-success" href="{{ path('app_article_blog_show', {'id': article_blog.id}) }}">Voir</a>
						<a class="btn btn-warning" href="{{ path('app_article_blog_edit', {'id': article_blog.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun résultat trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_article_blog_new') }}">Création nouvelle </a>
{% endblock %}
