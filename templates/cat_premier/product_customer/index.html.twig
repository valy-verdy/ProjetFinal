{% extends 'base.html.twig' %}
{% block title %}Produits
{% endblock %}
{% block body %}
	<h1>Liste des produits</h1>
	<br>
	<div class="container">
		<table class="table">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Description</th>
					<th>Photo</th>
					<th>Prix</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
				<pre>
					{{ dump(product.photosProduct) }}
				</pre>
					<tr>
						<td>{{ product.name }}</td>
						<td>{{ product.description }}</td>
						<td><img src="{{ asset('build/images/' ~ product.photo) }}" class="card-img-top" width="80" height="80" alt="..."></td>
						<td>{{ product.price }}â‚¬</td>
						<td class="text-center">
							<a class="btn btn-success" href="{{ path('cart_add',{'id':product.id}) }}">
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart4" viewbox="0 0 16 16">
