{% extends 'base.html.twig' %}

{% block title %}Modifier votre profil
{% endblock %}

{% block body %}
	<h1>Modifier votre profil</h1>
	<div class="container">
		<a class="btn btn-secondary" href="{{ path('app_customer_show',{'id':user.id}) }}">Retour</a>
		<a class="btn btn-warning" href="{{ path('change_password',{'id':user.id}) }}">Modifier votre mot de passe</a>
		{{ form_start(form) }}

		{{ form_row(form.gender) }}
		{% if is_granted('ROLE_ADMIN') %}

			{{ form_row(form.roles,{
            type: 'hidden'
        }) }}
		{% endif %}
		{{ form_row(form.email) }}
		{{ form_row(form.lastname) }}
		{{ form_row(form.firstname) }}
		{{ form_row(form.adress) }}
		{{ form_row(form.postCode) }}
		{{ form_row(form.city) }}
		{{ form_row(form.phone) }}
		{# {{ form_row(form.password, {
            label: 'Password'
        }) }} #}
		{# {{ include('customer/_form.html.twig', {'button_label': 'Modifier'}) }} #}
		<button type="submit" class="btn btn-primary">Valider</button>
		{{ form_end(form) }}
		{{ include('customer/_delete_form.html.twig') }}

	</div>



{% endblock %}
