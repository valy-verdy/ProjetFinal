<form method="post" action="{{ path('app_customer_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer définitivement votre compte?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
	<button type="submit" class="btn btn-danger" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer définitivement votre compte?');">Supprimer mon compte</button>
</form>
