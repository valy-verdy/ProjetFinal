{% extends 'dashboardbase.html.twig' %}

{% block title %}CategoryBlog index
{% endblock %}

{% block body %}
	<h1>Liste des Catégories Blog</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category_blog in category_blogs %}
				<tr>
					<td>{{ category_blog.id }}</td>
					<td>{{ category_blog.name }}</td>
					<td>{{ category_blog.description }}</td>
					<td>
						<a class="btn btn-success" href="{{ path('app_category_blog_show', {'id': category_blog.id}) }}">Voir</a>
						</td>
						<td>
						<a class="btn btn-warning" href="{{ path('app_category_blog_edit', {'id': category_blog.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun résultat trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_category_blog_new') }}">Création une nouvelle catégorie</a>
{% endblock %}
